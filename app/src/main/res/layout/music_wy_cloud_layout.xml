<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="64dp"
        android:layout_marginLeft="24dp"
        android:gravity="center_horizontal"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <com.mjzuo.views.ui.ImageCircleView
                android:id="@+id/img_ripple_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/icon_music01"
                android:layout_centerInParent="true"
                />
            <com.ui.common.view.MusicRippleView
                android:id="@+id/view_ripple_music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            >
            <com.mjzuo.views.ui.ImageCircleView
                android:id="@+id/img_b_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/icon_music01"
                android:layout_centerInParent="true"
                />
            <com.ui.common.view.MusicBView
                android:id="@+id/view_b_music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="42dp"
        >
        <Button
            android:id="@+id/start_anim_wxy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始"
            android:textSize="14sp"
            android:textColor="#333"
            android:padding="12dp"
            />
        <Button
            android:id="@+id/stop_anim_wxy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结束"
            android:textSize="14sp"
            android:textColor="#333"
            android:padding="12dp"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>

</RelativeLayout>
